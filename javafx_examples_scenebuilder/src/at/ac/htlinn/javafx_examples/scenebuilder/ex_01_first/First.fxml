<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.paint.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.ac.htlinn.javafx_examples.scenebuilder.ex_01_first.FirstController">
   <center>
      <HBox prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <TextField fx:id="op1" />
            <ListView fx:id="operator" maxHeight="100.0" minHeight="0.0" onMouseReleased="#calculate" prefHeight="100.0" prefWidth="200.0" />
            <TextField fx:id="op2" />
            <Label fx:id="result" text="Ergebnis" />
         </children>
      </HBox>
   </center>
   <bottom>
      <Label fx:id="status" BorderPane.alignment="CENTER" />
   </bottom>
   <top>
      <Button fx:id="bt1" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#bt1Pressed" text="Superbutton" BorderPane.alignment="CENTER">
         <textFill>
            <RadialGradient centerX="0.5" centerY="0.5" radius="0.5">
               <stops>
                  <Stop color="#140301" />
                  <Stop color="WHITE" offset="1.0" />
               </stops>
            </RadialGradient>
         </textFill>
      </Button>
   </top>

</BorderPane>
